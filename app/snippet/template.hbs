<div {{action 'click'}} class="media-left media-middle snippet-part">
    <div class="outer-image">
        <img class="media-object inner-image" src={{model.thumbnail}} draggable="false" />
    </div>
</div>

<div {{action 'click'}} class="media-body snippet-part">
    <div>
        {{model.name}}
    </div>
</div>

<div class="media-right media-top snippet-part status-icons {{if model.isSelected 'active'}}">
    {{#if model.isPlaying}}
        <div>
            <i class="material-icons">headset</i>
        </div>
    {{else}}
        {{#if showQueued}}
            <div>
                <i class="material-icons">schedule</i>
            </div>
        {{/if}}
    {{/if}}

    {{#if model.isDownloading}}
        <div>
            <i class="mdl-spinner mdl-js-spinner is-active"></i>
        </div>
    {{/if}}

    {{#if model.isDownloaded}}
        <div>
            <i class="material-icons">file_download</i>
        </div>
    {{/if}}
</div>

<div {{action 'toggleSelection'}} class="media-right media-middle snippet-part">
    <i class="material-icons">more_vert</i>
</div>
