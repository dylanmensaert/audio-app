<div {{action 'click'}} class="outer-image">
  <img class="inner-image" src={{model.thumbnail}} draggable="false" />
</div>

<div class="mdl-grid my-card-grid">
  <div class="my-card-text">
    <div class="mdl-card__supporting-text">
      {{model.name}}
    </div>
  </div>

  <div {{action 'toggleSelection'}} class="my-card-vert">
    <div class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon">
      <i class="material-icons">more_vert</i>
    </div>
  </div>
</div>

{{#if hasStatus}}
  <div class="my-card-actions-placeholder" />

  <div class="mdl-card__actions mdl-card--border">
    {{#if model.isPlaying}}
      <i class="material-icons">headset</i>
    {{else}}
        {{#if showQueued}}
            <i class="material-icons">schedule</i>
        {{/if}}
    {{/if}}

    {{#if model.isDownloading}}
        {{my-mdl tagName='i' class='mdl-spinner mdl-js-spinner is-active'}}
    {{/if}}

    {{#if model.isDownloaded}}
        <i class="material-icons">file_download</i>
    {{/if}}
  </div>
 {{/if}}