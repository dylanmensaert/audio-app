{{#c-mdl-layout transitionToRoute='transitionTo'}}
  <div class='mdl-layout__header-row autocomplete-header'>
    <label {{action 'transitionToPrevious'}} class="mdl-button mdl-js-button mdl-button--icon menu-icon">
      <i class="material-icons">
        arrow_back
      </i>
    </label>

    <span class="mdl-layout-title">
      {{query}}
    </span>

    <div class="mdl-layout-spacer"></div>

    <button {{action 'selectAll'}} class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon">
      <i class="material-icons">more_vert</i>
    </button>
  </div>

  {{#if selectedAlbums}}
      {{c-albums-bar albums=selectedAlbums save='save' edit='edit' delete='delete'}}
  {{/if}}

  <main class="mdl-layout__content mdl-color--grey-100">
    {{#if showNotFound}}
      No records found
    {{/if}}

    {{#if albums}}
      {{#c-endless-scroll didScrollToBottom='didScrollToBottom'}}
        <div class="my-panel">
            <div class="mdl-grid my-title-grid">
                <div class="my-title-cell--10-col">
                    <h4 class="my-title-text">
                        Albums
                    </h4>
                </div>
            </div>

            <div class="mdl-grid">
                {{#each sortedAlbums as |album|}}
                    {{c-album model=album action='play' swipeleft='pushToDownload' swiperight='pushToQueue' showQueued=album.isQueued toggleIsSelected='deselectAlbums'}}

                    <div class="my-album-separator">
                        <div class="my-album-line" />
                    </div>
                {{/each}}
            </div>
        </div>
      {{/c-endless-scroll}}
    {{/if}}

    {{#if albums.isPending}}
      <div class="my-loading-bar">
        {{c-mdl class='mdl-spinner mdl-js-spinner is-active'}}
      </div>
    {{/if}}
  </main>

  {{c-audio-player audioPlayer=audioPlayer transitionToQueue=transitionToQueue play=play pause=pause}}
{{/c-mdl-layout}}
