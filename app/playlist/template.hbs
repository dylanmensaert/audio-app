{{#if isEditMode}}
  {{c-input-bar value=name done='save'}}
{{else}}
  {{#c-fixed tagName='nav'}}
    <div class="nav-wrapper">
      <div class="my-back my-back-top" {{action 'back'}}>
        <i class="material-icons">arrow_back</i>
      </div>

      <div class="brand-logo truncate my-fixed-title">
        {{model.name}}
      </div>

      <ul class="right">
        <li>
          {{#link-to 'search.tracks' }}
            <i class="material-icons">search</i>
          {{/link-to}}
        </li>
      </ul>
    </div>
  {{/c-fixed}}
{{/if}}

<div class="card">
  <div class="card-image waves-effect waves-block waves-light">
    {{c-parallax src=model.thumbnail}}
  </div>

  <div class="card-content my-relative">
    {{#if model.isEditable}}
      <div class="fixed-action-btn horizontal click-to-toggle my-card-content">
        <a class="btn-floating btn-large waves-effect waves-light red my-model-btn">
          <i class="material-icons">menu</i>
        </a>

        <ul>
          <li>
            <a href="javascript:void(0)" class="btn-floating yellow darken-1" {{action 'setupEdit'}}>
              <i class="material-icons">mode_edit</i>
            </a>
          </li>

          {{#if model.isSaved}}
            <li>
              <a href="javascript:void(0)" class="btn-floating red" {{action 'delete'}}>
                  <i class="material-icons">delete</i>
              </a>
            </li>
          {{else}}
            <li>
              <a href="javascript:void(0)" class="btn-floating blue" {{action 'save'}}>
                  <i class="material-icons">shop_two</i>
              </a>
            </li>
          {{/if}}
        </ul>
      </div>
    {{/if}}

    <span class="card-title activator grey-text text-darken-4">
      Playlist
    </span>
  </div>

  <div class="card-action my-cover-action">
   {{#if model.isPlaying}}
        <i class="material-icons">
          headset
        </i>
      {{else if showQueued}}
          <i class="material-icons">
            schedule
          </i>
      {{/if}}

      {{#if model.isDownloading}}
          {{c-mdl class='mdl-spinner mdl-js-spinner is-active'}}
      {{/if}}

      {{#if model.isDownloaded}}
          <i class="material-icons">
            offline_pin
          </i>
      {{/if}}
  </div>
</div>

{{c-tracks models=sortedModels isPending=isPending didScrollToBottom='didScrollToBottom'}}