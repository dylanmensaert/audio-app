{{#if audioPlayer.recording}}
    <div class="audio-stamp" />

    <div class="container audio-bar">
        <div class="row">
            <div {{action 'transitionToQueue'}} class="col-xs-9 audio-name-outer">
                <div class="audio-name">
                    {{audioPlayer.recording.name}}
                </div>
            </div>

            <div class='col-xs-3 text-center'>
                <div class="audio-icon-large">
                    {{#if audioPlayer.isLoading}}
                        {{mdl-component tagName='i' class='mdl-spinner mdl-js-spinner is-active'}}
                    {{/if}}

                    {{#if audioPlayer.isPlaying}}
                        <i class="material-icons" {{action 'pause'}}>pause</i>
                    {{/if}}

                    {{#if audioPlayer.isIdle}}
                        <i class="material-icons" {{action 'play'}}>play_arrow</i>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
{{/if}}