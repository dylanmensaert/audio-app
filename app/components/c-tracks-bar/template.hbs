{{#c-action-bar models=tracks deselect='deselect'}}
    <div class="mdl-cell my-menu-cell">
        {{yield}}
    </div>

    <div class="mdl-cell my-menu-cell">
      <div {{action 'transitionToCollections'}}>
        <div class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon">
            <span class="material-icons">
              loyalty
            </span>
        </div>
      </div>
    </div>

    <div class="mdl-cell my-menu-cell">
      {{#if isEveryUnQueued}}
        <div {{action 'queue'}}>
          {{#c-mdl class='mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon'}}
            <span class="material-icons">
              queue_music
            </span>
          {{/c-mdl}}
        </div>
      {{else}}
         &nbsp;
      {{/if}}
    </div>

    <div class="mdl-cell my-menu-cell">
      {{#if isEveryDownloaded}}
        <div {{action 'delete'}}>
          {{#c-mdl class='mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon'}}
            <span class="material-icons">
              delete
            </span>
          {{/c-mdl}}
        </div>
      {{else if isEveryUndownloaded}}
        <div {{action 'download'}}>
          {{#c-mdl class='mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon'}}
            <span class="material-icons">
              file_download
            </span>
          {{/c-mdl}}
        </div>
      {{else}}
         &nbsp;
      {{/if}}
    </div>
{{/c-action-bar}}
