{{c-input value=value action='searchSelected' didFocusOut='didFocusOut'}}

{{#if value}}
  <div class="my-clear" {{action 'clear'}}>
    <i class="material-icons">close</i>
  </div>
{{/if}}

{{#if showAutoComplete}}
  <ul>
    {{#each suggestions as |suggestion|}}
      <li {{action 'searchSuggestion' suggestion}} class={{if suggestion.isSelected 'active'}}>
          {{suggestion.value}}
      </li>
    {{/each}}
  </ul>
{{/if}}