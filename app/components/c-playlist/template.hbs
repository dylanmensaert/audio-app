<div {{action 'click'}} class="card-image waves-effect waves-block waves-light">
    {{c-image src=model.thumbnail}}
</div>

<div class="card-content truncate">
    {{model.name}}
</div>

<div class="card-action">
    {{#if model.isPlaying}}
        <div class="my-track-icon">
            <div class="eq">
                <div class="eq-bar"></div>
                <div class="eq-bar"></div>
                <div class="eq-bar"></div>
            </div>
        </div>
        {{else if showQueued}}
        <i class="material-icons">schedule</i>
    {{/if}}

    {{#if model.isDownloading}}
        {{c-mdl class='mdl-spinner mdl-js-spinner is-active'}}
    {{/if}}

    {{#if model.isDownloaded}}
        <i class="material-icons">offline_pin</i>
    {{/if}}

    <i class="material-icons right" {{action 'changeSelect'}}>more_vert</i>
</div>
