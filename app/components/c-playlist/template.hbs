{{#link-to 'playlist' model tagName='div' class='card-image'}}
    {{c-image src=model.thumbnail}}
{{/link-to}}

<div class="card-content my-playlist-content" {{action 'changeSelect'}}>
  <div class="row">
    <div class="truncate">
      {{model.name}}
    </div>
  </div>
</div>

<div class="card-content my-playlist-content">
  <div class="row">
    <div class="truncate">
      {{model.name}}
    </div>

    <i class="material-icons" {{action 'changeSelect'}}>
      more_vert
    </i>
  </div>
</div>
