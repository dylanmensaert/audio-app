<div class="mdl-card mdl-shadow--2dp my-card">
  <div {{action 'click'}} class="my-outer-image">
    <img class="my-inner-image" src={{model.thumbnail}} draggable="false" />
  </div>

  <div class="mdl-grid my-card-grid">
    <div {{action 'click'}} class="mdl-card__supporting-text my-card-text">
      {{model.name}}

      <div class="my-paragraph-end" />
    </div>

    <div {{action 'toggleIsSelected'}} class="my-card-vert">
      <div class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon">
        <i class="material-icons">
          more_vert
        </i>
      </div>
    </div>
  </div>

  {{#if hasStatus}}
    <div class="my-card-actions-placeholder" />

    <div class="mdl-card__actions mdl-card--border my-card-actions">
      {{#if model.isPlaying}}
        <i class="material-icons">
          headset
        </i>
      {{else}}
          {{#if showQueued}}
              <i class="material-icons">
                schedule
              </i>
          {{/if}}
      {{/if}}

      {{#if model.isDownloading}}
          {{c-mdl class='mdl-spinner mdl-js-spinner is-active'}}
      {{/if}}

      {{#if model.isDownloaded}}
          <i class="material-icons">
            offline_pin
          </i>
      {{/if}}
    </div>
   {{/if}}
</div>