{{#c-action-bar models=collections total=total}}
    <div class="mdl-cell my-menu-cell" />
    <div class="mdl-cell my-menu-cell" />

    <div class="mdl-cell my-menu-cell">
      {{#if isEditable}}
          <div {{action 'edit'}}  class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon">
            <span class="material-icons">
              mode_edit
            </span>
          </div>
      {{else}}
         &nbsp;
      {{/if}}
    </div>

    <div class="mdl-cell my-menu-cell">
      {{#if isEverySaved}}
          <div {{action 'delete'}}  class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon">
            <span class="material-icons">
              delete
            </span>
          </div>
      {{else if isEveryUnsaved}}
          <div {{action 'save'}} class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon">
            <span class="material-icons">
              shop_two
            </span>
          </div>
      {{else}}
         &nbsp;
      {{/if}}
    </div>
{{/c-action-bar}}

{{#if isEditMode}}
  {{c-input-bar query=editedCollectionName done='save'}}
{{/if}}