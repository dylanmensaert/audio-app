{{#c-action-bar models=collections total=total}}
    <div class="mdl-cell my-menu-cell" />
    <div class="mdl-cell my-menu-cell" />

    <div class="mdl-cell my-menu-cell">
      {{#if isEditable}}
        <div {{action 'edit'}}>
          {{#c-mdl class='mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon'}}
            <span class="material-icons">
              mode_edit
            </span>
          {{/c-mdl}}
        </div>
      {{else}}
         &nbsp;
      {{/if}}
    </div>

    <div class="mdl-cell my-menu-cell">
      {{#if isEverySaved}}
        <div {{action 'delete'}}>
          {{#c-mdl class='mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon'}}
            <span class="material-icons">
              delete
            </span>
          {{/c-mdl}}
        </div>
      {{else if isEveryUnsaved}}
        <div {{action 'save'}}>
          {{#c-mdl class='mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon'}}
            <span class="material-icons">
              shop_two
            </span>
          {{/c-mdl}}
        </div>
      {{else}}
         &nbsp;
      {{/if}}
    </div>
{{/c-action-bar}}

{{#if isEditMode}}
  {{c-input-bar query=editedCollectionName done='save'}}
{{/if}}