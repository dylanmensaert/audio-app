{{#if hasSelected}}
  {{#c-fixed tagName='nav'}}
    <div class="nav-wrapper">
      <ul class="right">
        <li>
          <a href="javascript:void(0)" {{action 'transitionToPlaylists'}}>
              <i class="material-icons">loyalty</i>
          </a>
        </li>

        <li>
          {{#if isEveryUnQueued}}
            <a href="javascript:void(0)" {{action 'queue'}}>
                <i class="material-icons">queue_music</i>
            </a>
          {{else}}
            <a href="javascript:void(0)">
                &nbsp;
            </a>
          {{/if}}
        </li>

        <li>
          {{#if isEveryDownloaded}}
            <a href="javascript:void(0)" {{action 'delete'}}>
                <i class="material-icons">delete</i>
            </a>
          {{else if isEveryDownloadable}}
            <a href="javascript:void(0)" {{action 'download'}}>
                <i class="material-icons">file_download</i>
            </a>
          {{else}}
            <a href="javascript:void(0)">
                &nbsp;
            </a>
          {{/if}}
        </li>

        <li>
            <a href="javascript:void(0)" {{action 'deselect'}}>
                <i class="material-icons">close</i>
            </a>
        </li>
      </ul>
    </div>
  {{/c-fixed}}
{{/if}}

{{#c-endless-scroll didScrollToBottom='didScrollToBottom'}}
  {{#each models as |track|}}
      {{c-track model=track showQueued=track.isQueued}}
  {{/each}}

  {{#if isPending}}
    {{c-spinner class='my-spinner'}}
  {{/if}}
{{/c-endless-scroll}}
