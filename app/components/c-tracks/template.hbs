{{c-track-actions models=selectedTracks playlist=playlist}}

{{#c-endless-scroll didScrollToBottom='didScrollToBottom' }}
    {{#each models as |track|}}
        {{c-track model=track hideDownloaded=hideDownloaded playlist=playlist play='playTrack'}}
    {{/each}}

    {{#if isPending}}
        {{c-spinner class='my-spinner'}}
    {{/if}}
{{/c-endless-scroll}}