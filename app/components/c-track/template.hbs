<div class="my-track-draggable {{if model.isSelected 'my-active'}}">
    {{#link-to 'track.related' model.id tagName='div' class='my-track-middle'}}
        <div class="my-static-image">
            {{c-image src=thumbnail}}
        </div>
    {{/link-to}}

    <div {{action 'play'}} class="my-track-body">
        <div class="my-track-text">
            {{model.name}}
        </div>

        <div class="my-track-status grey-text">
            {{#if model.isPlaying}}
                <div class="my-track-icon">
                    <div class="eq">
                        <div class="eq-bar"></div>
                        <div class="eq-bar"></div>
                        <div class="eq-bar"></div>
                    </div>
                </div>
            {{/if}}

            {{#if model.isDownloaded}}
                <div class="my-track-icon">
                    <i class="material-icons">file_download</i>
                </div>
            {{/if}}
        </div>
    </div>

    {{#if model.isDisabled}}
      <div class="my-track-middle">
        <i class="material-icons">more_vert</i>
      </div>
    {{else}}
      <div {{action 'changeSelect' bubbles=false}} class="my-track-middle">
          <i class="material-icons">more_vert</i>
      </div>
    {{/if}}
</div>

<div class="my-separator {{if model.isDownloading 'my-loading'}}">
    <div class="my-line">
        {{#if model.isDownloading}}
            <div class="progress my-track-progress">
                <div class="indeterminate" />
            </div>
        {{/if}}
    </div>
</div>
