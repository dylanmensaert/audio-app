{{#if selectedModels.length}}
    <nav class="my-fixed my-action-bar">
        <div class="nav-wrapper">
            <ul class="right">
                <li>
                  <a href="javascript:void(0)" {{action 'save'}}>
                      <i class="material-icons {{unless unsavedPlaylists.length 'my-icon-disabled'}}">save</i>
                  </a>
                </li>

                <li>
                  <a href="javascript:void(0)" {{action 'delete'}}>
                      <i class="material-icons {{unless savedPlaylists.length 'my-icon-disabled'}}">delete</i>
                  </a>
                </li>

                <li>
                    <a href="javascript:void(0)" {{action 'deselect'}}>
                        <i class="material-icons">cancel</i>
                    </a>
                </li>
            </ul>
        </div>
    </nav>
{{/if}}

<div class="container">
    {{#c-endless-scroll didScrollToBottom='didScrollToBottom' }}
        {{#each models as |playlist|}}
            {{c-playlist model=playlist showSaved=showSaved}}
        {{/each}}

        {{#if isPending}}
            {{c-spinner class='my-spinner'}}
        {{/if}}
    {{/c-endless-scroll}}
</div>
