{{#c-mdl-layout transitionToRoute='transitionTo'}}
  {{#if isCreatedMode}}
    {{c-input-bar value=createdCollectionName done='saveCreate'}}
  {{else if selectedCollections}}
      {{c-collections-bar collections=selectedCollections}}
  {{else if cache.hasPreviousTransition}}
      {{c-transition-bar transitionToPrevious='transitionToPrevious' title=query selectAll='selectAll'}}
  {{/if}}

  {{#if cache.hasPreviousTransition}}
      <header class="mdl-layout__header hidden" />
  {{else}}
   {{c-menu-bar title='My Collections' selectAll='selectAll' classNameBindings='hideMenuBar:hidden'}}
  {{/if}}

  <main class="mdl-layout__content mdl-color--grey-100">
    <div class="mdl-grid">
      {{#unless collections.length}}
        No collections found
      {{/unless}}
    </div>

    {{#if collections}}
      <div class="my-panel">
          <div class="mdl-grid my-title-grid">
              <div class="my-title-cell--10-col">
                  <h4 class="my-title-text">
                      My Collections
                  </h4>
              </div>
          </div>

          <div class="mdl-grid">
              {{#each sortedCollections as |collection|}}
                  {{c-collection model=collection action='transitionTo'}}

                  <div class="my-collection-separator">
                      <div class="my-collection-line" />
                  </div>
              {{/each}}
          </div>
      </div>
    {{/if}}
  </main>

  {{#unless isCreatedMode}}
    {{#c-mdl action='setupCreate' class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored my-fixed-button"}}
      <i class="material-icons">add</i>
    {{/c-mdl}}
  {{/unless}}

  {{c-audio-player audioPlayer=audioPlayer transitionTo='transitionTo' play='play' pause='pause'}}
{{/c-mdl-layout}}
