{{#c-mdl-layout transitionToRoute='transitionTo'}}
  {{#if selectedCollections}}
      {{c-collections-bar collections=selectedCollections}}
  {{else if cache.hasPreviousTransitions}}
      {{c-transition-bar back='transitionToPrevious' title=query selectAll='selectAll'}}
  {{/if}}

  {{#if cache.hasPreviousTransitions}}
      <header class="mdl-layout__header hidden" />
  {{else}}
   {{c-menu-bar title=model.name selectAll='selectAll' classNameBindings='selectedCollections.length:hidden'}}
  {{/if}}

  {{#if selectedTracks}}
      {{#c-tracks-bar tracks=selectedTracks download='download' delete='delete' queue='queue' transitionToCollections='transitionTo'}}
          <div {{action 'removeFromCollection'}} class="mdl-button mdl-js-button mdl-js-ripple-effect my-menu-btn">
            <span class="material-icons mdl-badge my-badge">file_download</span>
          </div>
       {{/c-tracks-bar}}
  {{/if}}

  {{#c-endless-scroll tagName='main' class='mdl-layout__content mdl-color--grey-100' didScrollToBottom='didScrollToBottom'}}
    {{#if showNotFound}}
      No tracks found
    {{/if}}

    {{#if tracks}}
      <div class="my-panel">
          <div class="mdl-grid my-title-grid">
              <div class="my-title-cell--10-col">
                  <h4 class="my-title-text">
                      Tracks
                  </h4>
              </div>
          </div>

          <div class="mdl-grid">
              {{#each sortedTracks as |track|}}
                  {{c-track model=track action='play' swipeleft='pushToDownload' swiperight='pushToQueue' showQueued=(if model.isQueue false track.isQueued)}}

                  <div class="my-track-separator">
                      <div class="my-track-line" />
                  </div>
              {{/each}}
          </div>
      </div>
    {{/if}}

    {{#if isPending}}
      <div class="my-loading-bar">
        {{c-mdl class='mdl-spinner mdl-js-spinner is-active'}}
      </div>
    {{/if}}
  {{/c-endless-scroll}}

  {{c-audio-player audioPlayer=audioPlayer transitionTo='transitionTo' play='play' pause='pause'}}
{{/c-mdl-layout}}
