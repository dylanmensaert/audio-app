{{#c-mdl-layout transitionToRoute='transitionTo'}}
  {{#if cache.hasPreviousTransition}}
      <div class='mdl-layout__header-row my-header-bar'>
        <label {{action 'transitionToPrevious'}} class="mdl-button mdl-js-button mdl-button--icon my-spaced-icon">
          <i class="material-icons">
            arrow_back
          </i>
        </label>

        <div class="my-menu-cell my-text-left">
            <span class="mdl-badge my-menu-btn" data-badge={{collections.length}} />
        </div>
      </div>

      <header class="mdl-layout__header hidden" />
  {{else}}
      <header class="mdl-layout__header">
        <div class='mdl-layout__header-row'>
          <div class="my-menu-cell my-text-left">
              <span class="mdl-badge my-menu-btn" data-badge={{collections.length}} />
          </div>
        </div>
      </header>
  {{/if}}

  <main class="mdl-layout__content mdl-color--grey-100">
    <div class="my-panel">
      <div class="mdl-grid my-title-grid">
          <div class="my-title-cell--10-col">
              <h4 class="my-title-text">
                  My Collections
              </h4>
          </div>
      </div>

      {{#if showNotFound}}
        <div class="mdl-grid">
          No collections found
        </div>
      {{/if}}

      {{#if collections}}
        <div class="mdl-grid">
            {{#each sortedCollections as |collection|}}
                {{c-collection model=collection action='transitionTo' toggleIsSelected='toggleIsSelected'}}

                <div class="my-collection-separator">
                    <div class="my-collection-line" />
                </div>
            {{/each}}
        </div>
      {{/if}}
    </div>
  </main>

  {{c-audio-player audioPlayer=audioPlayer transitionTo='transitionTo' play='play' pause='pause'}}
{{/c-mdl-layout}}
