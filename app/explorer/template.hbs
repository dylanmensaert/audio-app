<div class="row menu-bar text-center">
    <div class="col-xs-10 outer-btn-group">
        <div class="btn-group btn-group-justified inner-btn-group">
            {{#link-to 'labels' class='btn' properties=linkToProperties}}
                Labels
            {{/link-to}}

            {{#link-to 'explorer.index' class='btn' properties=linkToProperties}}
                Explore
            {{/link-to}}
        </div>
    </div>

    <div class="col-xs-2 outer-label action-top">
        <div {{action 'selectAll'}} class="inner-label">
            <i class="material-icons">more_vert</i>
        </div>
    </div>
</div>

{{outlet}}

{{#if audio.snippet}}
    <div class="audio-stamp" />

    <div class="container audio-bar">
        <div class="row">
            <div {{action 'transitionToQueue'}} class="col-xs-9 audio-name-outer">
                <div class="audio-name">
                    {{audio.snippet.name}}
                </div>
            </div>

            <div class='col-xs-3 text-center'>
                <div class="audio-icon-large">
                    {{#if audio.isLoading}}
                        <i class="mdl-spinner mdl-js-spinner is-active"></i>
                    {{/if}}

                    {{#if audio.isPlaying}}
                        <i class="material-icons" {{action 'pause'}}>pause</i>
                    {{/if}}

                    {{#if audio.isIdle}}
                        <i class="material-icons" {{action 'play'}}>play_arrow</i>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
{{/if}}
