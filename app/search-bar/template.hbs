{{#if isSearchMode}}
  <div>
    <i class="material-icons">
      arrow_back
    </i>
  </div>
{{else}}
  <div class="mdl-layout__header-row">
    <span class="mdl-layout-title">
      <!-- TODO: title probably bugged, fix: http://www.getmdl.io/templates/android-dot-com/index.html -->
      {{title}}
    </span>

    <div class="mdl-layout-spacer"></div>

    <button {{action 'startSearchMode'}} class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon">
      <i class="material-icons">search</i>
    </button>

    <button {{action 'selectAll'}} class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon">
      <i class="material-icons">more_vert</i>
    </button>
  </div>
{{/if}}